<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.s.crt_wcmc.MainActivity">


    <EditText
        android:id="@+id/a"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b"
        android:layout_alignBottom="@+id/b"
        android:layout_marginEnd="28dp"
        android:layout_toStartOf="@+id/b"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/b"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/c"
        android:layout_alignBottom="@+id/c"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/c"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/r1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/r2"
        android:layout_alignBottom="@+id/r2"
        android:layout_alignStart="@+id/a"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/r2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/r3"
        android:layout_alignBottom="@+id/r3"
        android:layout_alignStart="@+id/b"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/r3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/c"
        android:layout_below="@+id/c"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/r2"
        android:layout_marginBottom="106dp"
        android:text="Solve" />

    <EditText
        android:id="@+id/n"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/solve"
        android:layout_alignEnd="@+id/r1"
        android:layout_marginBottom="82dp"
        android:layout_marginEnd="21dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/a"
        android:layout_alignStart="@+id/a"
        android:text="a1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/c"
        android:text="a3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/a"
        android:text="a2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/r1"
        android:layout_alignStart="@+id/r1"
        android:text="m1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/r2"
        android:layout_alignStart="@+id/r2"
        android:text="m2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/r2"
        android:layout_alignStart="@+id/r3"
        android:text="m3" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/n"
        android:layout_alignStart="@+id/n"
        android:text="Answer" />

</RelativeLayout>
